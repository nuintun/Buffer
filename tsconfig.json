{
  "compilerOptions": {
    "strict": true,
    "pretty": true,
    "newLine": "lf",
    "target": "ES5",
    "module": "ESNext",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "examples/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}