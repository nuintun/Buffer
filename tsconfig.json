{
  "compilerOptions": {
    "baseUrl": ".",
    "pretty": true,
    "strict": true,
    "newLine": "lf",
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2022",
    "skipLibCheck": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitOverride": true,
    "noUnusedParameters": true,
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "examples/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
